{
    "name": "realodix/issue-tracker",
    "description": "Issue tracking app for common projects.",
    "license": "MIT",
    "type": "project",
    "keywords": ["laravel", "tracker", "issue-tracker"],
    "require": {
        "php": "^8.2",
        "blade-ui-kit/blade-icons": "^1.5",
        "doctrine/dbal": "^3.5",
        "elgigi/commonmark-emoji": "^2.0",
        "filament/forms": "^2.17",
        "guzzlehttp/guzzle": "^7.5",
        "laravel/fortify": "^1.16",
        "laravel/framework": "^10.10",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "league/commonmark": "^2.3",
        "livewire/livewire": "^2.11",
        "power-components/livewire-powergrid": "^3.7",
        "spatie/commonmark-highlighter": "^3.0",
        "spatie/commonmark-shiki-highlighter": "^2.1",
        "spatie/laravel-permission": "^5.9"
    },
    "require-dev": {
        "brianium/paratest": "^7.0",
        "fakerphp/faker": "^1.21",
        "imanghafoori/laravel-microscope": "^1.0",
        "laravel/dusk": "^7.6",
        "mockery/mockery": "^1.5",
        "nunomaduro/collision": "^7.0",
        "nunomaduro/larastan": "^2.6",
        "phpunit/phpunit": "^10.1",
        "realodix/relax": "^1.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
